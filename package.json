{
  "name": "librarium",
  "version": "1.0.0",
  "description": "Automated library system with Arduino UNO and Electron.",
  "main": "index.js",
  "scripts": {
    "pack": "node index.js",
    "build": "npx electron-packager ./librarium-app librarium --overwrite --appname Librarium --asar --extraResource=librarium-app/librarium.db --platform=win32 --arch=x64",
    "start": "cd librarium-app && npm run start"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nthnn/librarium.git"
  },
  "author": "nthnn",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nthnn/librarium/issues"
  },
  "homepage": "https://github.com/nthnn/librarium#readme",
  "dependencies": {
    "electron-packager": "^17.1.2"
  }
}
